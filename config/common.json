{
  "identity" : {
    "title"     : "Prose Technical Docs",
    "copyright" : "Prose Foundation"
  },

  "theme" : {
    "accent" : {
      "light" : {
        "base"   : "#2062da",
        "active" : "#1152c8"
      },

      "dark" : {
        "base"   : "#ffffff",
        "active" : "#eeeeee"
      }
    }
  },

  "urls" : {
    "base"         : "https://docs.prose.org",
    "crisp_status" : "https://status.prose.org"
  },

  "favicons" : {
    "main"  : "favicons/favicon.ico",

    "sizes" : {
      "default" : "favicons/favicon.png",
      "512x512" : "favicons/favicon-512x512.png",
      "256x256" : "favicons/favicon-256x256.png",
      "128x128" : "favicons/favicon-128x128.png",
      "32x32"   : "favicons/favicon-32x32.png"
    }
  },

  "images" : {
    "logos" : {
      "header_full"  : "images/logos/logo-header-full.svg",
      "header_short" : "images/logos/logo-header-short.svg",
      "footer"       : "images/logos/logo-footer.svg"
    },

    "metas" : {
      "opengraph" : "images/metas/opengraph.png"
    },

    "categories" : {
      "guides" : {
        "basics"    : "images/categories/guides/basics.svg",
        "dashboard" : "images/categories/guides/dashboard.svg",
        "operating" : "images/categories/guides/operating.svg"
      },

      "references" : {
        "pod-api"    : "images/categories/references/pod-api.svg",
        "pod-config" : "images/categories/references/pod-config.svg"
      }
    }
  },

  "dimensions" : {
    "logos" : {
      "header_full"  : {
        "width" : 133
      },

      "header_short" : {
        "width" : 24
      },

      "footer"       : {
        "width" : 77
      }
    }
  },

  "colors" : {
    "changes" : {
      "groups" : {
        "pod" : "#d34040",
        "app" : "#dc9b37"
      }
    }
  },

  "texts" : {
    "home" : {
      "title" : "Welcome to the Prose Technical Docs",
      "label" : "How to setup your own Prose Pod server. For Prose server admins (cloud & self-hosted)."
    },

    "changes" : {
      "groups" : {
        "pod"   : "Pod",
        "app"   : "App",
        "other" : "Other"
      },

      "titles" : {
        "feed"   : "Prose Platform Changes",
        "latest" : "Latest Platform Changes",
        "year"   : "Platform Changes In"
      },

      "notice" : "**The Prose Platform is updated every day with improvements and new features.** This page is a ledger of all notable changes that occured over time.\n\n**Note that breaking changes appear in red.**\n\nIf you would like to monitor those changes, an RSS feed is available at: [`changes.rss`](/changes.rss)"
    }
  },

  "links" : {
    "header" : {
      "navigation" : [
        {
          "route" : ["guides"],
          "label" : "Guides"
        },

        {
          "route"    : ["references"],
          "label"    : "References",

          "dropdown" : [
            {
              "route" : ["pod-api"],
              "label" : "Pod API Reference"
            },
            {
              "route" : ["pod-config"],
              "label" : "Pod Configuration Reference"
            }
          ]
        }
      ],

      "actions" : [
        {
          "label"    : "More Help",

          "dropdown" : [
            {
              "title"    : "Prose Website",
              "subtitle" : "Go back to the Prose website.",
              "target"   : "https://prose.org/"
            },

            {
              "title"    : "Prose Help Center",
              "subtitle" : "Get help with using Prose as a user.",
              "target"   : "https://help.prose.org/"
            }
          ]
        }
      ]
    },

    "footer" : {
      "navigation" : [
        {
          "label"  : "Prose Website",
          "target" : "https://prose.org/"
        },

        {
          "label"  : "Terms of Use",
          "target" : "https://prose.org/terms/"
        },

        {
          "label"  : "Changelog",
          "target" : "https://prose.org/changelog/"
        },

        {
          "label"  : "Contact Us",
          "target" : "https://prose.org/contact/"
        }
      ]
    }
  },

  "actions" : {
    "home" : [
      {
        "route" : ["guides", "basics", "quickstart"],
        "label" : "Get Started with Prose"
      },

      {
        "route" : ["guides", "operating"],
        "label" : "Self-Host Prose"
      }
    ]
  },

  "bulletpoints" : {
    "home" : {
      "quickstart" : {
        "description" : "Setup Prose for your team in a matter of minutes.",

        "actions"     : [
          {
            "route" : ["guides", "basics", "quickstart"],
            "label" : "Start with Prose"
          }
        ]
      },

      "guides" : {
        "description" : "Guides on how to manage your Prose Pod server, and more.",

        "actions"     : [
          {
            "route" : ["guides", "dashboard"],
            "label" : "Use Dashboard"
          },

          {
            "route" : ["guides", "operating"],
            "label" : "Operate a Pod"
          }
        ]
      },

      "references" : {
        "description" : "In-depth technical references of all available APIs.",

        "actions"     : [
          {
            "route" : ["references", "pod-api"],
            "label" : "Pod API"
          },
          {
            "route" : ["references", "pod-config"],
            "label" : "Pod Config"
          }
        ]
      }
    }
  },

  "includes" : {
    "scripts" : {
      "urls" : [
        {
          "src"   : "https://scripts.simpleanalyticscdn.com/latest.js",
          "async" : true
        }
      ]
    },

    "stylesheets" : {
      "inline" : [
        "#home .illustration {\n  height: 210px !important;\n}\n\n#not_found .illustration {\n  height: 170px !important;\n}"
      ]
    }
  },

  "plugins" : {
    "code" : {
      "syntaxes" : [
        "bash",
        "yaml",
        "json",
        "toml",
        "nginx",
        "ini",
        "dns-zone-file"
      ]
    }
  },

  "features" : {
    "support" : false
  }
}
